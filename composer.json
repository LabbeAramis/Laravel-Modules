{
    "name": "labbearamis/laravel-modules",
    "description": "Laravel Module management",
    "keywords": [
        "modules",
        "laravel",
        "labbe aramis",
        "module",
        "rad"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Labbe Aramis",
            "email": "labbe.aramis@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "mockery/mockery": "~1.0",
        "orchestra/testbench": "^6.2",
        "friendsofphp/php-cs-fixer": "^2.16",
        "laravel/framework": "^8.0",
        "spatie/phpunit-snapshot-assertions": "^2.1.0",
        "phpstan/phpstan": "^0.12.14"
    },
    "autoload": {
        "psr-4": {
            "LabbeAramis\\Modules\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LabbeAramis\\Modules\\Tests\\": "tests",
            "Modules\\Recipe\\": "tests/stubs/valid/Recipe"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "LabbeAramis\\Modules\\LaravelModulesServiceProvider"
            ],
            "aliases": {
                "Module": "LabbeAramis\\Modules\\Facades\\Module"
            }
        },
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "scripts": {
        "update-snapshots": "./vendor/bin/phpunit --no-coverage -d --update-snapshots",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --debug --coverage-html coverage",
        "pcf": "vendor/bin/php-cs-fixer fix --verbose"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
